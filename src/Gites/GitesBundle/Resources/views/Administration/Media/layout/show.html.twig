{% extends "::layout/layoutAdmin.html.twig" %}

{% block body -%}
    <h1>Les photos</h1>

    <table class="table table-striped table-hover" >
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><a href="{{ pathDefault ~ entity.getWebPath }}" target="_blank"><img src='{{ pathDefault ~ entity.getWebPath }}' style="width:900px;"></a></td>
            </tr>
        </tbody>
    </table>

    <ul class="list-unstyled list-inline" >
    <li>
        <a href="{{ path('admin_media') }}" class="btn btn-primary">
           Retour &agrave; la liste des photos
        </a>
    </li>
    <li>
        <a href="{{ path('admin_media_edit', { 'id': entity.id }) }}" class="btn btn-warning">
            Modifier
        </a>
    </li>
    <li class="pull-right" style="margin-right:30px;">{{ form(delete_form) }}</li>
</ul>
{% endblock %}
