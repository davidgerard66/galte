<script>
    $(function () {
        $('.lienscroll a[href*=#]:not([href=#])').click(function () {
            if (location.pathname.replace(/^\//, '') == this.pathname.replace(/^\//, '') && location.hostname == this.hostname) {
                var target = $(this.hash);
                target = target.length ? target : $('[name=' + this.hash.slice(1) + ']');
                if (target.length) {
                    $('html,body').animate({
                        scrollTop: target.offset().top
                    }, 1000);
                    return false;
                }
            }
        });


       $('.bt_partager').mouseover(function(){
           $(this).after("<div class='partage'><ul class='list-unstyled'>"
                   + "<li class=''><i class='fa fa-facebook'></i> <a href='http://www.facebook.com/share.php?u={{ app.request.uri }}%3Flabel%3Dsocial_sharecenter_facebook' target='_blank'>Partager sur Facebook</a></li>"
                   +"<li class=''><a href='http://twitter.com/home/?status={{ app.request.uri }}%3Flabel%3Dsocial_sharecenter_twitter' target='_blank'>Partager sur Twitter</a></li>"
                   +"<li class=''><a href='https://plus.google.com/share?url={{ app.request.uri }}%3Flabel%3Dsocial_sharecenter_googleplus' target='_blank' >Partager sur Google+</a></li>"
          +"</ul></div>")
       })               .mouseout(function(){
            partageTimeout = setTimeout(function(){ $('.partage').remove();}, 400);
           $('.partage').mouseover(function(){ clearTimeout(partageTimeout);});
           $('.partage').mouseout(function(){ partageTimeout = setTimeout(function(){ $('.partage').remove();}, 400);});
       });




    });
    </script>
